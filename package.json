{
  "name": "integrated-life",
  "private": true,
  "workspaces": [
    "shared",
    "server",
    "client-web"
  ],
  "scripts": {
    "dev:server": "npm run dev -w server",
    "dev:web": "npm run dev -w client-web",
    "build": "npm run build -w shared && npm run build -w server && npm run build -w client-web",
    "build:shared": "npm run build -w shared",
    "build:server": "npm run build -w server",
    "build:web": "npm run build -w client-web",
    "build:web:deploy": "npm run build:shared && npm run build:web",
    "generate:openapi": "npm run generate:openapi -w server",
    "generate:swift": "node scripts/generate-swift.js",
    "start": "node server/dist/src/server/index.js",
    "start:web": "npm run start -w client-web",
    "test": "npm run test -w shared && npm run test -w server && npm run test -w client-web"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.0"
  }
}
